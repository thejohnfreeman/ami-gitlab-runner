{
  "variables": {
    "version": null,
    "build": null
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-2",
    "instance_type": "t2.micro",
    "source_ami": "ami-f4f4cf91",
    "ssh_username": "ubuntu",
    "ami_name": "ami-gitlab-runner-linux-{{ user `version` }}-{{ user `build` }}",
    "force_deregister": true,
    "force_delete_snapshot": true,
    "ami_groups": ["all"]
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "./install.sh"
    },
    {
      "type": "shell",
      "environment_vars": [
        "TAG_VERSION={{ user `version` }}",
        "TAG_BUILD={{ user `build` }}"
      ],
      "script": "./tags.sh"
    }
  ]
}
